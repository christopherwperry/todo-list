<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <h1>To Do List</h1>
    <form class="todo-list" action="/" method="post">
      <input type="text" name="todo" value="" placeholder="New Item">
      <button type="submit" name="button">Add</button><br>
    </form>
    {{#todo}}
    <form class="new-task" action="/move" method="post" value="{{.}}" name="test">
      <button type="click" name="button">Mark Complete</button>
      <input class="todo-item" type="text" name="complete" value="{{.}}" readonly>
      <br>
    </form>
    {{/todo}}
    <h2>Completed Tasks</h2>
      {{#completed}}
      <p><del>{{.}}</del></p>
      {{/completed}}
  </body>
</html>
